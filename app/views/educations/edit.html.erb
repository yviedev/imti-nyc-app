<div class="application">
  <h1>SECTION B: EDUCATION</h1>
  <p>Please add your education supporting data below.</p>

  <%= bootstrap_form_for [@application, @education], :url => {:action => "update"} do |f| %>
  <p><%= f.text_field :school %></p>
  <p><%= f.text_field :location %></p>
  <p><%= f.text_field :start_date %></p>
  <p><%= f.text_field :end_date %></p>
  <p><%= f.text_field :degree %></p>
  <p><%= f.text_field :degree_date %></p>
  <p><%= f.submit :save %></p>
  <% end %>

   <p><%= link_to 'Cancel', "/applications/#{@application.id}/educations"%>
</div>