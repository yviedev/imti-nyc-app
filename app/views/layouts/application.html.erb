<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">

    <meta name="description" content="AMI, Association Montessori Internationale, international montessori teacher training in Atlanta Georgia">

    <meta name="keywords" content="Montessori teacher, teacher training, Montessori teacher training, AMI, Association Montessori Internationale, Atlanta, GA, Georgia, international, institute">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <%= csrf_meta_tags %>

    <!-- Title  -->
    <title>International Montessori Training Institute, Atlanta, Georgia</title>

    <!-- Favicon  -->
    <link rel="shortcut icon" href=<%= asset_path 'assets/img/compass-rose-tiny.png' %>>

    <!-- ===================== All CSS Files ===================== -->

    <!-- Style css -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'style' %>

    <!-- Responsive css -->
    <%= stylesheet_link_tag 'css/responsive' %>

    <!-- Color Changer css -->
    <%= stylesheet_link_tag 'css/color-changer.css' %>

    <!--[if IE]>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->

</head>

<body>
    <!-- Color Changer Area Start -->
    <div class="color_palate" id="color_changer">
        <div class="single_color" id="color_1"></div>
        <div class="single_color" id="color_2"></div>
        <div class="single_color" id="color_3"></div>
        <div class="single_color" id="color_4"></div>
    </div>

    <!-- preloader start -->
    <div id="preloader"></div>
    <!-- /.end preloader -->

    <header class="header_area">
        <!-- Top Header Area Start -->
        <div class="top_header_area hidden-xs">
            <div class="container">
                <div class="row">
                    <div class="col-sm-3 col-md-5">
                        <!--  Top Quote Area Start -->
                        <div class="top_quote hidden-sm">
                            <p>International Montessori Training Institute</p>
                        </div>
                    </div>
                    <div class="col-sm-9 col-md-7">
                        <div class="social_reg_log_area">
                            <!--  Top Social bar start -->
                            <div class="top_social_bar">
                                <%= link_to '<i class="fa fa-facebook" aria-hidden="true"></i>'.html_safe,
                                    "https://www.facebook.com/International-Montessori-Training-Institute-144259905606348/" %>
                            </div>
                            <!--  Login Register Area -->
                            <div class="login_register">
                                <% if user_signed_in? %>
                                    <div class="logout">
                                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                                        <%= link_to 'Logout', "/sign_out", :method => :delete %>
                                    </div>
                                <% else %>
                                    <div class="login">
                                        <i class="fa fa-sign-in" aria-hidden="true"></i>
                                        <%= link_to 'Login', "/sign_in" %>
                                    </div>
                                <% end %>
                                <div class="reg">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    <%= link_to 'Register', "/sign_up" %>
                                </div>
                            </div>

                            <div class="language_area">
                                <div class="dropdown">
                                    <button aria-expanded="false" aria-haspopup="true" data-toggle="dropdown" id="lag" type="button" class="btn btn-default dropdown-toggle">
                                        <i class="fa fa-globe" aria-hidden="true"></i>Language
                                        <i class="fa fa-caret-down" aria-hidden="true"></i>
                                    </button>
                                    <ul aria-labelledby="lag" class="dropdown-menu">
                                        <li><%= link_to (image_tag("img/core-img/lan-1.jpg") + 'English'), '#' %></li>
                                        <li><%= link_to (image_tag("img/core-img/lan-2.jpg") + 'German'), '#' %></li>
                                        <li><%= link_to (image_tag("img/core-img/lan-3.jpg") + 'Spanish'), '#' %></li>
                                        <li><%= link_to (image_tag("img/core-img/lan-4.jpg") + 'Bangla'), '#' %></li>
                                        <li><%= link_to (image_tag("img/core-img/lan-5.jpg") + 'China'), '#' %></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Top Header Area  End -->

        <!-- Main Header Area Start -->
        <div class="main_header_area home2">
            <div class="container">
                <div class="row">
                    <div class="col-sm-3 col-xs-9">
                        <!-- Logo Area -->
                        <div class="logo_area">
                            <%= link_to image_tag("img/core-img/logo.png"), "/" %>
                        </div>
                    </div>

                    <div class="col-sm-9 col-xs-12">
                        <!-- Menu Area -->
                        <div class="main_menu_area">
                            <div class="mainmenu">
                                <nav>
                                    <ul id="nav">
                                        <li><%= link_to "Home", "/" %></li>
                                        <li><%= link_to "My Application", "/applications" %></li>
                                        <li><a href="#">Gallery<i class="fa fa-caret-down" aria-hidden="true"></i></a>
                                            <ul class="sub-menu">
                                                <li><%= link_to 'Gallery Fullwidth', '#' %></li>
                                                <li><%= link_to 'Gallery 4 Column', '#' %></li>
                                                <li><%= link_to 'Gallery 3 Column', '#' %></li>
                                                <li><%= link_to 'Gallery 2 Column', '#' %></li>
                                            </ul>
                                        </li>
                                        <li><a href="#">course<i class="fa fa-caret-down" aria-hidden="true"></i></a>
                                            <ul class="sub-menu">
                                                <li><%= link_to "Course Grid" '#' %></li>
                                                <li><%= link_to "Course List" '#' %></li>
                                                <li><%= link_to "Course Details" '#' %></li>
                                            </ul>
                                        </li>
                                        <li><a href="#">teacher<i class="fa fa-caret-down" aria-hidden="true"></i></a>
                                            <ul class="sub-menu">
                                                <li><%= link_to "Teachers", "#" %></li>
                                                <li><%= link_to "Teacher Details", "#" %></li>
                                            </ul>
                                        </li>
                                        <li><a href="#">Event<i class="fa fa-caret-down" aria-hidden="true"></i></a>
                                            <ul class="sub-menu">
                                                <li><%= link_to "Event Grid", "#" %></li>
                                                <li><%= link_to "Event List", "#" %></li>
                                                <li><%= link_to "Event Details", "#" %></li>
                                            </ul>
                                        </li>
                                        <li><%= link_to "Contact", "/contact" %></li>
                                        <li><%= link_to "About", "/about" %></li>
                                    </ul>
                                </nav>
                            </div>
                            <!-- mainmenu end -->
                            <!-- Search Button Area -->
                            <div class="search_button hidden-xs">
                                <%= link_to '<i class="fa fa-search" aria-hidden="true"></i>'.html_safe, '#' %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Main Header Area End -->

        <!-- Search Box Area Start -->
        <div id="search">
            <div class="search_box_area">
                <form action="#" method="post">
                    <input type="text" name="s" id="search_box" placeholder="Enter keyword and hit enter">
                    <input type="submit" value="Submit" id="sub">
                    <div id="close_button">
                        <i class="fa fa-times-circle" aria-hidden="true"></i>
                    </div>
                </form>
            </div>
        </div>
        <!-- Search Box Area End -->
    </header>

    <div class="render_page">
      <%= render "/shared/alerts" %>
      <div class="container">
        <%= yield %>
      </div>
    </div>
    <!-- ===================== Newsletter Area Start ===================== -->
    <div class="newsletter_area wow fadeInUp" data-wow-delay="0.2s">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="newsletter_text">
                        <h4>Subcribe weekly newsletter</h4>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="newsletter_from">
                        <form action="#">
                            <div class="form-group">
                                <input type="email" class="form-control" id="email" placeholder="Enter Your E-mail" required>
                            </div>
                            <button type="submit" class="btn btn-default"><i class="fa fa-paper-plane"></i>Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ===================== Newsletter Area End ===================== -->

    <!-- ===================== Footer Area Start ===================== -->
    <footer class="footer_area">
        <div class="container">
            <div class="row">
                <!-- Footer About Area Start -->
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="footer_about_us wow fadeInUp" data-wow-delay="0.2s">
                        <div class="title">
                            <h4>About IMTI</h4>
                            <!-- Useful Links Title -->
                            <div class="underline"></div>
                        </div>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut delectus consectetur omnis, alias nulla repudiandae quasi non at ullam, vel officiis unde cum ea. Perferendis tempora eligendi aut, repellat eius. Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                    </div>
                </div>
                <!-- Footer About Area End -->

                <!-- Upcoming Area Start -->
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="footer_upcoming_event wow fadeInUp" data-wow-delay="0.4s">
                        <div class="title">
                            <h4>upcoming event</h4>
                            <!-- Useful Links Title -->
                            <div class="underline"></div>
                        </div>
                        <!-- Single upcoming post -->
                        <div class="event_single_post">
                            <%= image_tag "img/news-img/blog-2.jpg" %>
                            <%= link_to "<p>As long as we live its you and me baby</p>".html_safe, "/"%>
                        </div>
                        <!-- Single upcoming post -->
                        <div class="event_single_post">
                            <%= image_tag "img/news-img/blog-3.jpg" %>
                            <%= link_to "<p>As long as we live its you and me baby</p>".html_safe, "/"%>
                        </div>
                        <!-- Single upcoming post -->
                        <div class="event_single_post">
                            <%= image_tag "img/news-img/blog-4.jpg" %>
                            <%= link_to "<p>As long as we live its you and me baby</p>".html_safe, "/"%>
                        </div>
                    </div>
                </div>
                <!-- Upcoming Area End -->

                <!-- Contact info Area Start -->
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="footer_contact_info wow fadeInUp" data-wow-delay="0.6s">
                        <div class="title">
                            <h4>get in touch</h4>
                            <!-- Useful Links Title -->
                            <div class="underline"></div>
                        </div>
                        <!-- single contact info start -->
                        <div class="footer_single_contact_info">
                            <i class="fa fa-thumb-tack" aria-hidden="true"></i>
                            <p>IMTI<br>The Arthur Building<br>1975 North Park Place<br>Atlanta, GA 30339</p>
                        </div>
                        <!-- single contact info start -->
                        <div class="footer_single_contact_info">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <a href="tel:+17709534684">Tel: +1 770 953 4684</a>
                            <a href="tel:+16106023057">Fax: +1 610 602 3057</a>
                        </div>
                        <!-- single contact info start -->
                        <div class="footer_single_contact_info">
                            <i class="fa fa-envelope-o" aria-hidden="true"></i>
                            <a href="mailto:administrator@montessori-imti.org">administrator@montessori-imti.org</a>
                        </div>
                    </div>
                </div>
                <!-- Contact info Area End -->

                <!-- Useful Links Area Start -->
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="important_links wow fadeInUp" data-wow-delay="0.8s">
                        <div class="title">
                            <h4>useful links</h4>
                            <!-- Useful Links Title -->
                            <div class="underline"></div>
                        </div>
                        <!-- Links Start -->
                        <div class="links">
                            <p><i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                <%= link_to "All Our Courses", "/"%></p>
                            <p><i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                <%= link_to "Event Calendar", "/"%></p>
                            <p><i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                <%= link_to "Customer Support", "/"%></p>
                            <p><i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                <%= link_to "Career at EduCamp", "/"%></p>
                            <p><i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                <%= link_to "Terms &amp; Conditions", "/"%></p>
                            <p><i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                <%= link_to "Community Forums", "/"%></p>
                        </div>
                        <!-- Links End -->
                    </div>
                </div>
                <!-- Useful Links Area End -->
            </div>
            <!-- end./ row -->
        </div>
        <!-- end./ container -->

        <!-- Bottom Footer Area Start -->
        <div class="footer_bottom_area">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="footer_bottom wow fadeInDown">
                            <!-- Insert copywrite text here -->
                        </div>
                        <!-- Bottom Footer Copywrite Text Area End -->
                    </div>
                </div>
                <!-- end./ row -->
            </div>
            <!-- end./ container -->
        </div>
        <!-- Bottom Footer Area End -->
    </footer>
    <!-- ===================== Footer Area End ===================== -->

    <!-- ===================== All jQuery Plugins ===================== -->

    <%= javascript_include_tag 'application' %>

</body>

</html>
